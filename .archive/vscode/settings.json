// December 2026 Backup of Config

{
    // SECTION: Open json editor for settings
    "workbench.settings.editor": "json",

    // SECTION: Misc
    "workbench.startupEditor": "none",
    "telemetry.telemetryLevel": "off",
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "workbench.secondarySideBar.defaultVisibility": "hidden",

    // SECTION: Window
    "window.commandCenter": false,
    "window.restoreWindows": "none",
    "window.newWindowProfile": "Default",
    "window.newWindowDimensions": "offset",

    // SECTION: UI Preference
    "breadcrumbs.enabled": false,
    "breadcrumbs.filePath": "off",
    "editor.mouseWheelZoom": false,
    "editor.minimap.enabled": false,
    "breadcrumbs.symbolPath": "off",
    "editor.renderWhitespace": "none",
    // "editor.rulers": [88, 120],

    // SECTION: Theme
    "workbench.iconTheme": "catppuccin-mocha",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.productIconTheme": "feather-vscode",

    // SECTION: Workbench
    // "workbench.tips.enabled": false,
    // "workbench.statusBar.visible": false,
    // "workbench.layoutControl.enabled": false,
    // "workbench.tree.enableStickyScroll": false,
    // "workbench.colorCustomizations": {
    //     "tree.indentGuidesStroke": "#4E4B5C",
    //     "activityBar.activeBorder": "#dbd7caed"
    // },

    // SECTION: Workbench Scrolling
    "workbench.list.smoothScrolling": true,
    "workbench.list.fastScrollSensitivity": 8,

    // SECTION: Workbench Editor
    "workbench.editor.limit.value": 5,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.limit.enabled": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.limit.excludeDirty": true,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.editor.preventPinnedEditorClose": "keyboard",

    // SECTION: Font Preference - "Maple Mono Medium, Zenbones Brainy Medium, JetBrains Mono Regular Medium, DankMono Nerd Font Mono"
    "editor.fontSize": 14,
    "editor.lineHeight": 1.6,
    // "editor.fontWeight": 400,
    "editor.fontLigatures": true,
    "editor.fontFamily": "Maple Mono",

    // SECTION: Terminal Preference
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.ignoreProcessNames": [
        "starship",
    ],
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.customGlyphs": true,
    "terminal.integrated.allowChords": false,
    "terminal.integrated.enableImages": true,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.tabs.location": "right",
    "terminal.integrated.gpuAcceleration": "auto",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.enableMultiLinePasteWarning": "auto",
    "terminal.integrated.tabs.hideCondition": "singleTerminal",
    "terminal.integrated.accessibleViewPreserveCursorPosition": true,
    "terminal.integrated.accessibleViewFocusOnCommandExecution": true,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font, DankMono Nerd Font",

    "terminal.explorerKind": "external",
    "terminal.external.osxExec": "Ghostty.app",
    "terminal.sourceControlRepositoriesKind": "external",

    // SECTION: Editor Scroll + Scrollbar
    "editor.smoothScrolling": true,
    "editor.scrollbar.vertical": "auto",
    "editor.overviewRulerBorder": false,
    "editor.stickyScroll.enabled": false,
    "editor.scrollbar.horizontal": "auto",
    "editor.scrollbar.verticalScrollbarSize": 12,

    // SECTION: Editor Brackets
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairsHorizontal": "active",

    // SECTION: Editor Cursor
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line",
    "editor.cursorSurroundingLines": 8,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.hideCursorInOverviewRuler": false,

    // SECTION: Editor Indentation
    "editor.detectIndentation": false,
    "editor.guides.indentation": false,
    "editor.guides.highlightActiveIndentation": "always",

    // SECTION: Editor Controls
    "editor.dragAndDrop": false,
    "editor.showFoldingControls": "never",

    // SECTION: Editor Details
    "editor.matchBrackets": "near",
    "editor.lineNumbers": "relative",
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",

    // SECTION: Editor Formatting */
    "editor.formatOnSave": false,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "editor.linkedEditing": true,

    // SECTION: APC
    "window.titleBarStyle": "custom",
    "apc.activityBar": {
        "size": 30,
        "position": "bottom",
        "hideSettings": false,
    },
    "apc.electron": {
        // "titleBarStyle": "hiddenInset",
        "trafficLightPosition": {
            "x": 10,
            "y": 10
        }
    },
    "apc.font.family": "Iosevka Custom",
    "apc.monospace.font.family": "Iosevka Custom",
    "apc.statusBar": {
        "height": 30,
        "fontSize": 12,
        "position": "editor-bottom",
    },

    // SECTION: Cusom css
    "apc.stylesheet": {
        // ".title-label": "display: none !important",
