    // SECTION: Better Comments
    "better-comments.tags": [
        {
            "tag": "note", // NOTE → Important information or clarification
            "bold": false,
            "italic": false,
            "color": "#98C379",
            "underline": false,
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo", // TODO → Task awaiting completion or follow-up
            "bold": false,
            "italic": false,
            "color": "#FF8C00",
            "underline": false,
            "strikethrough": false,
            "backgroundColor": "transparent",
        },
        {
            "tag": "fixme", // FIXME → Bug or code that needs fixing
            "bold": false,
            "italic": false,
            "color": "#FF2D00",
            "underline": false,
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "!", // ! → Urgent alert warning or logic flaw
            "bold": false,
            "italic": false,
            "color": "#FFD700",
            "underline": false,
            "strikethrough": false,
            "backgroundColor": "transparent",
        },
        {
            "tag": "?", // ? → Question or requires clarification
            "bold": false,
            "italic": false,
            "color": "#3498DB",
            "underline": false,
            "strikethrough": false,
            "backgroundColor": "transparent",
        },
        {
            "tag": "anchor", // Anchor → Global bookmark
            "bold": true,
            "italic": false,
            "color": "#FF6F61",
            "underline": true,
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "section", // SECTION → Local bookmark
            "bold": true,
            "italic": false,
            "color": "#94e2d5",
            "underline": true,
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
    ],

    // SECTION: Code Runner
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.enableAppInsights": false,
    "code-runner.clearPreviousOutput": true,
    "code-runner.executorMap": {
        "php": "php",
        "lua": "lua",
        "v": "v run",
        "perl": "perl",
        "ruby": "ruby",
        "go": "go run",
        "r": "Rscript",
        "dart": "dart",
        "bat": "cmd /c",
        "fsharp": "fsi",
        "zig": "zig run",
        "perl6": "perl6",
        "scala": "scala",
        "swift": "swift",
        "julia": "julia",
        "ocaml": "ocaml",
        "mojo": "mojo run",
        "groovy": "groovy",
        "racket": "racket",
        "ahk": "autohotkey",
        "autoit": "autoit3",
        "haskell": "runghc",
        "kit": "kitc --run",
        "javascript": "node",
        "csharp": "scriptcs",
        "crystal": "crystal",
        "shellscript": "bash",
        "python": "python3",
        "clojure": "lein exec",
        "typescript": "ts-node",
        "scheme": "csi -script",
        "lisp": "sbcl --script",
        "coffeescript": "coffee",
        "applescript": "osascript",
        "vbscript": "cscript //Nologo",
        "sass": "sass --style expanded",
        "scss": "scss --style expanded",
        "sml": "cd $dir && sml $fileName",
        "nim": "nim compile --verbosity:0 --hints:off --run",
        "powershell": "powershell -ExecutionPolicy ByPass -File",
        "d": "cd $dir && dmd $fileName && $dir$fileNameWithoutExt",
        "less": "cd $dir && lessc $fileName $fileNameWithoutExt.css",
        "rust": "cd $dir && rustc $fileName && $dir$fileNameWithoutExt",
        "pascal": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
        "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
        "haxe": "haxe --cwd $dirWithoutTrailingSlash --run $fileNameWithoutExt",
        "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "fortran": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "fortran-modern": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "FortranFreeForm": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "fortran_fixed-form": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "objective-c": "cd $dir && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    },

    // SECTION: Neovim
    "vscode-neovim.neovimExecutablePaths.linux": "",
    "vscode-neovim.neovimExecutablePaths.win32": "",
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/vim",
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1},

    // SECTION: Python
    "[python]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "explicit",
        },
        "diffEditor.ignoreTrimWhitespace": true,
    },
    "ruff.importStrategy": "useBundled",
    "python.analysis.typeCheckingMode": "standard",
    "cSpell.userWords": [
    ],
}
