// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.

// Put keybinds here to work globally outside & inside of editor
[
  // Tasks
  // {
  //   "context": "Workspace",
  //   "bindings": {
  //     "cmd-r": ["task::Spawn", { "task_name": "r/python" }],
  //   },
  // },

  // Project Panel
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-e": "project_panel::ToggleFocus",
    },
  },
  {
    "context": "Global || Editor || Workspace && right_dock == ProjectPanel",
    "bindings": {
      "cmd-shift-e": "workspace::ToggleRightDock",
    },
  },

  // Git Panel
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-g": "git_panel::ToggleFocus",
    },
  },
  {
    "context": "Global || Editor || Workspace && right_dock == GitPanel",
    "bindings": {
      "cmd-shift-g": "workspace::ToggleRightDock",
    },
  },

  // Debugger Panel
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-d": "debug_panel::ToggleFocus",
    },
  },
  {
    "context": "Global || Editor || Workspace && bottom_dock == DebugPanel",
    "bindings": {
      "cmd-shift-d": "workspace::ToggleBottomDock",
    },
  },

  // Escape Panels
  {
    "context": "Workspace && bottom_dock",
    "bindings": {
      "escape": "workspace::ToggleBottomDock",
    },
  },
  {
    "context": "Workspace && right_dock",
    "bindings": {
      "escape": "workspace::ToggleRightDock",
    },
  },

  // Settings Files
  {
    "context": "Global || Editor || Workspace",
    "bindings": {
      "cmd-.": "zed::OpenKeymap",
    },
  },
  {
    "context": "Global || Editor || Workspace && mode == full",
    "bindings": {
      "cmd-,": "zed::OpenSettingsFile",
    },
  },

  // Disable Presets
  {
    "context": "KeymapEditor",
    "bindings": {
      "cmd-e": null,
    },
  },
  {
    "context": "(Editor && mode == full)",
    "bindings": {
      "cmd-e": null,
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-r": null,
    },
  },

